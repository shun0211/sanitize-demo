<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<div class="search">
  <%= form_with(url: search_tasks_path, method: :get, remote: true) do |f| %>
    <%= f.text_field :search %>
    <%= f.submit "æ¤œç´¢" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @tasks %>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.content %></td>
          <td><%= task.category %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

